<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="email"
            android:ems="10"
            android:id="@+id/emailtxt"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_alignBottom="@+id/mailIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mailIcon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mailIcon"
            android:src="@drawable/mail"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:minHeight="181dp"
            android:layout_below="@+id/nametxt"
            android:layout_toStartOf="@+id/emailtxt"
            android:layout_marginEnd="18dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ageIcon"
            android:src="@drawable/age"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:minHeight="181dp"
            android:layout_below="@+id/mailIcon"
            android:layout_toStartOf="@+id/agetxt"
            android:layout_marginEnd="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="age"
            android:ems="10"
            android:id="@+id/agetxt"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_alignBottom="@+id/ageIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ageIcon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/genderIcon"
            android:src="@drawable/gender"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:minHeight="181dp"
            android:layout_below="@+id/ageIcon"
            android:layout_toStartOf="@+id/gendertxt"
            android:layout_marginEnd="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="gender"
            android:ems="10"
            android:id="@+id/gendertxt"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_alignBottom="@+id/genderIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/genderIcon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/eduIcon"
            android:src="@drawable/edu"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:minHeight="181dp"
            android:layout_below="@+id/genderIcon"
            android:layout_toStartOf="@+id/edutxt"
            android:layout_marginEnd="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="education"
            android:ems="10"
            android:id="@+id/edutxt"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_alignBottom="@+id/eduIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/eduIcon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/univIcon"
            android:src="@drawable/school"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:minHeight="181dp"
            android:layout_below="@+id/eduIcon"
            android:layout_toStartOf="@+id/edutxt"
            android:layout_marginEnd="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="education"
            android:ems="10"
            android:id="@+id/univtxt"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_alignBottom="@+id/univIcon"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/univIcon" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nametxt"
            android:background="@drawable/profile"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changebtn"
            android:text="Change Profile"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/com_facebook_button_send_background"
            android:layout_below="@id/univIcon" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changepass"
            android:text="Change Password"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/com_facebook_button_send_background"
            android:layout_below="@id/changebtn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savebtn"
            android:text="Save"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/com_facebook_button_send_background"
            android:layout_below="@id/changepass" />

    </RelativeLayout>
</ScrollView>