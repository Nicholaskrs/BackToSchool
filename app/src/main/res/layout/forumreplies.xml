<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replied by:"
            android:id="@+id/replybtn"
            android:textSize="15dp"
            android:layout_below="@+id/contenttxt"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#56bfe2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="madeby"
            android:id="@+id/madebytxt"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/contenttxt"
            android:layout_toEndOf="@+id/textView7"
            android:textColor="#56bfe2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply date:"
            android:id="@+id/textView7"
            android:layout_below="@+id/replybtn"
            android:layout_alignParentStart="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="#56bfe2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/rDate"
            android:layout_below="@+id/madebytxt"
            android:layout_alignStart="@+id/madebytxt"
            android:textSize="15dp"
            android:textColor="#56bfe2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:id="@+id/contenttxt"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#56bfe2" />

    </RelativeLayout>
</LinearLayout>